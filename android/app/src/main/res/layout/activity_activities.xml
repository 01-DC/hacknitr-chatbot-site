<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/botImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/girl"
                android:padding="10dp"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/receive_round_box"
                android:padding="14dp"
                android:text="I've suggested some activities for you to make your day better."
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_url="https://assets10.lottiefiles.com/packages/lf20_7smeegra.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="12dp">
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="40dp"
                    android:padding="2dp"
                    android:layout_height="40dp"
                    android:src="@drawable/girl"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/receive_round_box"
                    android:padding="14dp"
                    android:text="Get indulged in some work. Learn a new skill or take up a hobby"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_url="https://assets4.lottiefiles.com/private_files/lf30_xnjjfyjt.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="40dp"
                    android:padding="2dp"
                    android:layout_height="40dp"
                    android:src="@drawable/girl"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/receive_round_box"
                    android:padding="14dp"
                    android:text="Listen to your favourite songs, discover new playlists."
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_url="https://assets6.lottiefiles.com/packages/lf20_h1bogema.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="40dp"
                    android:padding="2dp"
                    android:layout_height="40dp"
                    android:src="@drawable/girl"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/receive_round_box"
                    android:padding="14dp"
                    android:text="Go out! Meet with your friends and family. Meet up with new people."
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_url="https://assets8.lottiefiles.com/packages/lf20_YnsM0o.json"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_width="40dp"
                    android:padding="2dp"
                    android:layout_height="40dp"
                    android:src="@drawable/girl"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/receive_round_box"
                    android:padding="14dp"
                    android:text="Go to a restaurant. Get your favourite food and munch on!"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>